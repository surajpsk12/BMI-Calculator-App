<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3EAFD"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your BMI is"
            android:textColor="#246AFE"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Circular BMI (just a big text for now, custom drawable can be added later) -->
        <TextView
            android:id="@+id/bmiValue"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="20.4"
            android:textSize="75sp"
            android:textColor="#246AFE"
            android:layout_weight="1"
            android:background="@drawable/circle_background"
            android:layout_marginBottom="16dp" />

        <!-- BMI Category -->
        <TextView
            android:id="@+id/bmiCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Underweight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#246AFE"
            android:layout_marginBottom="24dp" />

        <!-- Info Message -->
        <TextView
            android:id="@+id/bmiInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your BMI is 20.4, which means you are in the Normal range.\n\nA healthy BMI range for your height is 53.5 to 72 kg.\n\nMaintaining a healthy BMI can reduce your risk of chronic diseases."
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

        <!-- Find Out More Button -->
        <Button
            android:id="@+id/findOutMoreBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Out More"
            android:backgroundTint="#246AFE"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
